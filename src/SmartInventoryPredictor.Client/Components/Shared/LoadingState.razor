<div class="container-fluid">
    <!-- Header Skeleton -->
    <div class="row mb-4">
        <div class="col">
            <div class="placeholder-glow">
                <div class="placeholder col-4 mb-2" style="height: 2rem;"></div>
                <div class="placeholder col-6" style="height: 1rem;"></div>
            </div>
        </div>
        <div class="col-auto">
            <div class="placeholder-glow">
                <div class="placeholder col-12" style="height: 2.5rem; width: 120px;"></div>
            </div>
        </div>
    </div>

    <!-- Stats Cards Skeleton -->
    <div class="row mb-4">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="placeholder-glow flex-grow-1">
                                <div class="placeholder col-6 mb-2" style="height: 1rem;"></div>
                                <div class="placeholder col-4 mb-2" style="height: 2rem;"></div>
                                <div class="placeholder col-8" style="height: 0.875rem;"></div>
                            </div>
                            <div class="placeholder-glow">
                                <div class="placeholder rounded" style="height: 3rem; width: 3rem;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Charts Skeleton -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <div class="placeholder-glow">
                        <div class="placeholder col-3 mb-2" style="height: 1.25rem;"></div>
                        <div class="placeholder col-5" style="height: 1rem;"></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="placeholder-glow">
                        <div class="placeholder col-12 rounded" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <div class="placeholder-glow">
                        <div class="placeholder col-6 mb-2" style="height: 1.25rem;"></div>
                        <div class="placeholder col-4" style="height: 1rem;"></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="placeholder-glow">
                        <div class="placeholder col-12 rounded" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>